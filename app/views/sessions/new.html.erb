<h1>Sign in</h1>
<%= form_for (:session, :url => sessions_path) do |f| -%>
  <div class="clearfix">
    <%= f.label :email, :class => "xlInput" %>
    <div class="input">
      <%= f.text_field :email, :class => "medium" %>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label :password, :class => "xlInput" %>
    <div class="input">
      <%= f.password_field :password, :class => "medium" %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit "Sign in", :class => "btn primary" %>
  </div>
<% end -%>